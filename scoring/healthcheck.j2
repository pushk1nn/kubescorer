---
kind: Deployment
apiVersion: apps/v1
metadata:
  name: {{service}}-scorecheck
  namespace: scoring
  labels:
    app: {{service}}-scorecheck
spec:
  selector:
    matchLabels:
      app: {{service}}-scorecheck
  template:
    metadata:
      labels:  
        app: {{service}}-scorecheck
        deployment: {{service}}-scorecheck
    spec:
      containers:
        - name: {{service}}-scorecheck
          image: 100.65.1.83:5000/{{service}}-scorecheck:latest
          terminationMessagePath: /dev/termination-log
          terminationMessagePolicy: File
          imagePullPolicy: Always
      restartPolicy: Always
      terminationGracePeriodSeconds: 30
      dnsPolicy: ClusterFirst
  strategy:
    type: RollingUpdate
    rollingUpdate:
      maxUnavailable: 25%
      maxSurge: 25%
  revisionHistoryLimit: 10
  progressDeadlineSeconds: 600

---
kind: Service
apiVersion: v1
metadata:
  name: {{service}}-scorecheck
  namespace: scoring
spec:
  ports:
    - name: 45281-tcp
      protocol: TCP
      port: 45281
      targetPort: 45281
  selector:
    app: {{service}}-scorecheck
  type: LoadBalancer
